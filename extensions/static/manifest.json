{
  "name": "EcoCart - AI Powered Sustainable Shopping Companion",
  "description": "Track and manage your carbon footprint from your shopping transactions with the power of AI.",
  "version": "0.1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "serviceWorker.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "permissions": ["activeTab", "scripting", "storage", "tabs"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "My basic Chrome extension",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/img/logo-16.png",
      "32": "/img/logo-34.png",
      "48": "/img/logo-48.png",
      "128": "/img/logo-128.png"
    }
  },
  "icons": {
    "16": "/img/logo-16.png",
    "32": "/img/logo-34.png",
    "48": "/img/logo-48.png",
    "128": "/img/logo-128.png"
  }
}
